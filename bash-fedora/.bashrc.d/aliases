# Defaults
export VISUAL=nvim
export EDITOR="$VISUAL"

# Aliases
alias vim="nvim"
alias vi="nvim"

# Functions
function y() {
	local tmp="$(mktemp -t "yazi-cwd.XXXXXX")" cwd
	yazi "$@" --cwd-file="$tmp"
	IFS= read -r -d '' cwd < "$tmp"
	[ -n "$cwd" ] && [ "$cwd" != "$PWD" ] && builtin cd -- "$cwd"
	rm -f -- "$tmp"
}

# Autostart
eval "$(zoxide init bash)"
